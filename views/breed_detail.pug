extends layout

block content
    div(class="d-flex justify-content-center flex-row gap-10 pt-2")
        a(href=breed.url + "/update")
            button(class="btn btn-success") Update breed
        a(href=breed.url + "/delete")
            button(class="btn btn-danger") Delete breed
    div(class="d-flex col-12 flex-column justify-content-center gap-10")
        h3 #{title}
        p #{breed.desc}

    if errors
        ul
            for error in errors
                li!= error.msg